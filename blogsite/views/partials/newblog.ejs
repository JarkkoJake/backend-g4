<style>
    #newblog {
        height: 100%;
        width: 12.5%;
        position: absolute;
        background-color: #c5c5c5;
        box-shadow: 3px 3px 3px #ccc;
        display: flex;
        justify-content: center;
    }
    #newblog-content {
        margin-top: 70%;
    }
    #header {
        font-weight: bold;
        font-size: 15px;
        color: #000000;
    }
    .form-spacing {
        margin: 10px 0px 0px 5px;
    }
</style>

<div id="newblog">
    <div id="newblog-content">
        <h1 id="header">Create a new blog</h1>
        <div>
            <form action="/blog" method="POST" enctype="multipart/form-data">
                <label for="inputBlogName">Title</label>
                <input class="form-control" type="text" name="title" id="inputBlogName" required>
                <label for="inputBlogContent">Content</label>
                <input class="form-control" type="text" name="content" id="inputBlogContent">
                <label for="inputBlogTags">Tags</label>
                <input class="form-control" type="text" name="tags" id="inputBlogTags" required>
                <label for="inputTopic">Topic</label>
                <select class="form-spacing" name="topic" id="inputTopic">
                    <option value="music">Music</option>
                    <option value="technology">Technology</option>
                    <option value="nature">Nature</option>
                    <option value="transport">Transport</option>
                    <option value="other">Other</option>
                </select>
                <input class="form-control" type="file" name="thumbnail"/>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
            </form>
        </div>
    </div>
</div>


